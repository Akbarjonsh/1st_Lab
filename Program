          #region task3_1
            double s,sum,i,fact;

             for (double x = 0.1; x <= 1; x += 0.1)
             {
                 i = 0;
                 fact = 1;
                 s = 0;
                do
                {
                    sum = Math.Pow(-1, i) * Math.Pow(x, 2 * i) / fact;
                    i++;
                    fact *= (2 * i) * (2 * i - 1);
                    s += sum;
                }
                while (Math.Abs(sum) > 0.0001);
                 double y = Math.Cos(x);

                 Console.WriteLine(s  + "  " + y);

             }
            #endregion

           #region task3_6
           
            for ( double x = 0.1; x <= 1; x += 0.1)
            {   double i = 1;
                double s = 0;
                double sum = 0;

                do
                {
                    sum = Math.Pow(-1, i + 1) * Math.Pow(x, 2 * i+1) / (4 * i * i - 1);
                    i++;
                    s += sum;

                } while (Math.Abs(sum) > 0.0001);

                double y = (1 + x * x) * Math.Atan(x) / 2 - x / 2;
                Console.WriteLine(s + "    " + y);



            }
             
