           double x = (y * Math.PI / 180);
           double S = 0;
           for (int i = 1; i <= 9; i++)
           {
               S = S + Math.Cos(x * i) / Math.Pow(x, (i - 1));

           }
           Console.WriteLine(S);

           #endregion
       
         #region task1_9
            double s = 0;
            int x = 1;
            for (int i = 1; i <= 6; i++)
            {
                x *= i;
                s += Math.Pow((-1), i) * Math.Pow(5, i) / x;
            }
            Console.WriteLine(s);

        #endregion

#region task1_15
            double a = 1, b = 2, c = 1;

            double d = 0,e = 0, s = 1;


            for (int i = 1; i <= 3; i++)
            {
                d = a + b;
                a = b;
                b = d;


                e = c + s;
                c = s;
                s = e;
            }

            Console.WriteLine(d/e);
            #endregion


          #region task1_16
         
           double s = 0;
           double x = 1;
           for (int i = 1; i <= 64  ; i++)
           {
               x = x * 2;
               s = s + x;

           }
           Console.WriteLine(s+1);
           
            #endregion
            
   #region task1_18
int m = 10;
for (int i = 3; i <= 24; i += 3)
{
m *= 2;
Console.WriteLine("через " + i + " ч - " + m + " клеток ");
}
 #engregion



         #region task2_2
            int sum = 1; int p = 1;
