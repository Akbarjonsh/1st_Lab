           #region task2_7/8
            double s = 10, d = 0; int n = 0;
            for (int i = 0; i <= 6; i++)
            {
                s = s + 0.1 * s;
                d = d + s;
                n++;// n - кол-во дней
            }
            Console.WriteLine(d);
            Console.WriteLine(n+1)

