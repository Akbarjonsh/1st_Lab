      #region task2_4
            double s = 0.1 , i = 0, sum = 0, d = 0.1;
            while(d > 0.0001)
            {

                sum = sum + Math.Pow(s, i);
                i = i + 2;
                d = Math.Pow(s, i);
            }
            Console.WriteLine(sum);

